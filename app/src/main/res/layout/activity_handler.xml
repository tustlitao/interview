<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".handler.HandlerActivity">

    <Button
            android:text="postButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="440dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintHorizontal_bias="0.518"
            android:layout_marginTop="243dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

    <Button
            android:text="sendMessageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendMessageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="116dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="117dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="29dp"
            app:layout_constraintTop_toBottomOf="@+id/postButton" android:layout_marginBottom="363dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/sendMessageButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="177dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginBottom="299dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>